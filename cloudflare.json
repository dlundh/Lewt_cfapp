{
    
    "name": "Lewt",
    "description": "Offer rewards and prices to visitors who browse your web pages and content. Keep your visitors longer on your web pages and make them come back for more.",
    "version": "1.0",
      "contributors":[
        {
          "name":"Daniel Lundh",
          "email":"daniel@orbstudio.net"
        }
      ],
    "category": "loyalty programs",
    "main": "./public/js/lewt_module.js",
    "config":{
        "details":{
            "Language": "English",
            "Price": "Free",
            "Restrictions": "None",            
            "has_js": true
        }, 
        "assets":{
            "logos" : {
                "200px": "./public/images/lewt_logo_200.png",
                "132px": "./public/images/lewt_logo_132.png",
                "110px": "./public/images/lewt_logo_110.png"
            },
            "detail_page" : [
                "./public/images/lewt_account.png"
            ]
        },
        "interface": [
            {
                "type": "string",
                "id": "email",
                "name": "Email Address",
                "description": "Type your email address to register with.",
                "domain_request": true,
                "private": true
            },
            {
                "type": "string",
                "id": "password",
                "name": "Password",
                "description": "Type your password, minimum of 6 characters.",
                "domain_request": true,
                "private": true
            },          
            {
                "type": "string",
                "id": "password_confirmation",
                "name": "Confirm Password",
                "description": "Type your password again.",
                "domain_request": true,
                "private": true
            }
        ]
    },
    "account": {
        "callback_url": "http://lewt.it/users",
        "user_fields": ["email"]
    }
}